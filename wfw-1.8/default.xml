<?xml version="1.0" encoding="UTF-8"?>
<site>
    <title>IO</title>
    <name>io_module</name>
    <base>webframework</base>
    <description>Gestionnaire de transfert de données</description>
    
    <index>
        <page id="index" name="Accueil">index.php</page>
        <!-- wfw -->
        <page id="datamodel" role="visitor" name="Obtient le model de données">ctrl.php?app=wfw&amp;ctrl=datamodel</page>
        <page id="datafetch" role="administrator" name="Obtient des données">ctrl.php?app=wfw&amp;ctrl=datafetch</page>
        <!-- admin -->
        <!-- visiteur -->
        <page id="upload_file" role="visitor" name="Test l'envoi d'un fichier">ctrl.php?app=application&amp;ctrl=upload_file</page>
        <page id="upload_editor" role="visitor" name="Editeur">ctrl.php?app=application&amp;ctrl=upload_editor</page>
        <page id="check_upload" role="visitor" name="Test l'etat du processus d'upload">ctrl.php?app=io_module&amp;ctrl=check_upload</page>
        <page id="begin_upload" role="visitor" name="Débute un envoie">ctrl.php?app=io_module&amp;ctrl=begin_upload</page>
        <page id="finalize_upload" role="visitor" name="Finalise un envoie">ctrl.php?app=io_module&amp;ctrl=finalize_upload</page>
        <page id="packet_upload" role="visitor" name="Envoie un paquet">ctrl.php?app=io_module&amp;ctrl=packet_upload</page>
        <!-- utilisateur -->
    </index>

    <tree>
        <index/>
        <begin_upload/>
    </tree>
    
